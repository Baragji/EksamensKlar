    }
    
    .stat-content h3 {
        font-size: 2rem;
    }
    
    .achievements-grid {
        grid-template-columns: 1fr 1fr;
    }
    
    .achievement {
        padding: 1rem;
    }
    
    .achievement-icon {
        font-size: 2rem;
    }
}
