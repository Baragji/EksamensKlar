    loadData() {
        // Get data from localStorage across all modules
        const contentData = JSON.parse(localStorage.getItem('examklar-content-progress') || '{}');
        const flashcardData = JSON.parse(localStorage.getItem('examklar-flashcard-progress') || '{}');
