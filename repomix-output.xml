                    <button id="dismiss-install-btn" class="btn btn-secondary">Senere</button>
                </div>
            </div>
        `;

        // Add styles
        if (!document.getElementById('pwa-styles')) {
            const style = document.createElement('style');
            style.id = 'pwa-styles';
            style.textContent = `
                .install-banner {
                    position: fixed;
                    bottom: 0;
