                    .card-front { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; }
                    .card-back { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); 
                               color: white; transform: rotateY(180deg); }
